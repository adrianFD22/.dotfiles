#!/bin/sh

# Full screen screenshot

screenshot_name=$(printf 'screenshot_%s.png' $(date +'%G-%m-%d-%T'))

while  getopts "i" opt; do
    case $opt in
        i)  print_window_flag=1;;
        ?)  printf "Usage: %s: [-i]\n" $0
            exit 2
    esac
done

if [ ! -z "$print_window_flag" ]; then
    maim -i $(xdotool getactivewindow) ~/Images/Screenshots/$screenshot_name
else
    maim ~/Images/Screenshots/$screenshot_name
fi

echo $screenshot_name > $XNOTIFY_FIFO
